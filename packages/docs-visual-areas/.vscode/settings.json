// Place your settings in this file to overwrite default and user settings.
{
	"files.exclude": {
		"out": false // set this to true to hide the "out" folder with the compiled JS files
	},
	"search.exclude": {
		"out": true // set this to false to include "out" folder in search results
	},
	// Turn off tsc task auto detection since we have the necessary tasks as npm scripts
	"typescript.tsc.autoDetect": "off",
	"workbench.colorCustomizations": {
		"activityBar.activeBackground": "#ca469a",
		"activityBar.activeBorder": "#93c639",
		"activityBar.background": "#ca469a",
		"activityBar.foreground": "#e7e7e7",
		"activityBar.inactiveForeground": "#e7e7e799",
		"activityBarBadge.background": "#93c639",
		"activityBarBadge.foreground": "#15202b",
		"statusBar.background": "#ca469a",
		"statusBar.debuggingBackground": "#46ca76",
		"statusBar.debuggingForeground": "#15202b",
		"statusBar.foreground": "#e7e7e7",
		"statusBarItem.hoverBackground": "#d56eb0",
		"titleBar.activeBackground": "#ca469a",
		"titleBar.activeForeground": "#e7e7e7",
		"titleBar.inactiveBackground": "#ca469a99",
		"titleBar.inactiveForeground": "#e7e7e799"
	},
	"peacock.color": "#ca469a",
	"editor.codeActionsOnSave": {
		"source.eslint.fixAll": true
	},
	"editor.formatOnSave": true,
	"editor.formatOnPaste": false,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.tabSize": 2,
	"[typescript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	}
}
